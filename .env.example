# Server
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
STREAMLIT_PORT=8501

# Database
DATABASE_PATH=app.db

# Ollama LLM
# Use http://localhost:11434 for local dev (no Docker)
# Use http://ollama:11434 for Docker Compose (internal network)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=30
LLM_MULTI_AGENT=false
LLM_MULTI_AGENT_ROLES=behavioral,network,compliance

# Simulator
SIMULATOR_TPS=1.0
FRAUD_RATE=0.10

# CORS (comma-separated origins, * for all)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text
