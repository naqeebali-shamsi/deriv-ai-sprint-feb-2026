{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "metric_snapshot.schema.json",
  "title": "MetricSnapshot",
  "type": "object",
  "required": ["snapshot_id", "timestamp", "metrics"],
  "properties": {
    "snapshot_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "model_version": { "type": "string" },
    "metrics": {
      "type": "object",
      "required": ["total_txns", "flagged_txns", "cases_open", "cases_closed"],
      "properties": {
        "total_txns": { "type": "integer", "minimum": 0 },
        "flagged_txns": { "type": "integer", "minimum": 0 },
        "cases_open": { "type": "integer", "minimum": 0 },
        "cases_closed": { "type": "integer", "minimum": 0 },
        "precision": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
        "recall": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
        "f1_score": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
        "avg_review_time_sec": { "type": ["number", "null"], "minimum": 0 },
        "patterns_discovered": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
